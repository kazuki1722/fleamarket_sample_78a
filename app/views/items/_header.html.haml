%header
  .main
    = link_to new_item_path do
      .exhibition
        .exhibition__button
          出品する
          .icon
            = image_tag asset_path("icon_camera.png"), size: "54x54"
    = link_to root_path do
      = image_tag asset_path("logo.png"), class: "main__img", size: "140x40"
    = form_with url: search_items_path, local: true, method: :get, class: "main__form" do |f|
      = f.text_field :keyword, placeholder: "キーワードから探す", class: "main__form__input"
      = image_submit_tag asset_path("icon-search 1.png"), class: "main__form__button"
   
  .contents
    .contents__left
      = render 'items/category'
      .brand
        ブランド
    .contents__right
      - if user_signed_in?
        .login
          = link_to "マイページ", mypages_path
        .register
          = link_to "ログアウト", destroy_user_session_path, method: :delete
      -else
        .login
          = link_to "ログイン", new_user_session_path
        .register
          = link_to "新規会員登録", signup_items_path