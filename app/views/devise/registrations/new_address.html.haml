.AccountPage
  .AccountPage__logo
    = link_to root_path do
      = image_tag asset_path("logo.png"), size: "185x49"
  .AccountPage__box
    %h2.AccountPage__box__title
      住所情報登録
    .AccountPage__box__form
      = form_for @address do |f|
        = render "devise/shared/error_messages", resource: @address
        .AccountPage__box__form__field
          .AccountPage__box__form__field__label
            = f.label :送付先氏名
            .AccountPage__box__form__field__label__right
              必須
          = f.text_field :address_family_name, placeholder: "例)山田", class: "AccountPage__box__form__field__input--family"
          = f.text_field :address_first_name, placeholder: "例)彩", class: "AccountPage__box__form__field__input--first"

        .AccountPage__box__form__field
          .AccountPage__box__form__field__label
            = f.label :送付先氏名かな
            .AccountPage__box__form__field__label__right
              必須
          = f.text_field :address_family_name_kana, placeholder: "例)やまだ", class: "AccountPage__box__form__field__input--family"
          = f.text_field :address_first_name_kana, placeholder: "例)あや", class: "AccountPage__box__form__field__input--first"

        .AccountPage__box__form__field
          .AccountPage__box__form__field__label
            = f.label :郵便番号（ハイフンなし）
            .AccountPage__box__form__field__label__right
              必須
          = f.text_field :zipcode, placeholder: "例)1234567", class: "AccountPage__box__form__field__input"

        .AccountPage__box__form__field
          .AccountPage__box__form__field__label
            = f.label :都道府県
            .AccountPage__box__form__field__label__right
              必須
          = f.text_field :prefecture, placeholder: "例)大阪府", class: "AccountPage__box__form__field__input"

        .AccountPage__box__form__field
          .AccountPage__box__form__field__label
            = f.label :市区町村
            .AccountPage__box__form__field__label__right
              必須
          = f.text_field :city, placeholder: "例)大阪市中央区難波", class: "AccountPage__box__form__field__input"

        .AccountPage__box__form__field
          .AccountPage__box__form__field__label
            = f.label :番地
            .AccountPage__box__form__field__label__right
              必須
          = f.text_field :house_number, placeholder: "例)５丁目1-60", class: "AccountPage__box__form__field__input"

        .AccountPage__box__form__field
          .AccountPage__box__form__field__label
            = f.label :マンション名やビル名、そしてその部屋番号
          = f.text_field :building, placeholder: "例)なんばスカイオ15階", class: "AccountPage__box__form__field__input"

        .AccountPage__box__form__field
          .AccountPage__box__form__field__label
            = f.label :お届け先のお届け先の電話番号
          = f.text_field :phone_number, placeholder: "例)090-1234-5678", class: "AccountPage__box__form__field__input"

        .AccountPage__box__form__actions
          = f.submit "Sign up", class: "AccountPage__box__form__actions"
        -# = render "devise/shared/links"
        
